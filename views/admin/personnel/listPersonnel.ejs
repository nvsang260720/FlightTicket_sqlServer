<div class="container-fluid">
<div class="card card-success">
  <div class="card-header">
    <h3 class="card-title">
      Quản lí nhân viên
    </h3>
    <div class='float-right'>
      <button id="btnAdd" type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#modalAdd">
        Thêm Thông Tin Nhân Viên
      </button>
    </div>
  </div>

  <div class="card-body">
    <table id="example" class="table table-striped table-bordered">
      <thead class="theadTable">
        <tr>
          <th style="width: 3%;">MaNhanVien</th>
          <th style="width: 3%;">MaChiNhanh</th>
          <th style="width: 10%;">Ten</th>
          <th style="width: 18%;">DiaChi</th>
          <th style="width: 10%;">SoDienThoai</th>
          <th style="width: 10%;">Luong</th>
          <th style="width: 3%;">EDIT</th>
          <th style="width: 3%;">DELETE</th>
        </tr>
      </thead>
      <tbody>
        <% personnel.forEach( per=> { %>
          <tr>
            <td class="centerTD">
              <%= per.MaNhanVien %>
            </td>
            <td>
              <%= per.MaChiNhanh %>
            </td>
            <td>
              <%= per.Ten %>
            </td>
            <td class="centerTD">
              <%= per.DiaChi %>
            </td>
            <td>
              <%= per.SoDienThoai %>
            </td>
            <td>
              <%= per.Luong %> $
            </td>
            <td class="bt">
              <form action="/admin/edit-personnel/<%= per.MaNhanVien %>" method="GET">
                <button type="submit" class="btn btn-primary">EDIT</button>
              </form>
            </td>
            <td>
              <form action="/admin/personnel/<%= per.MaNhanVien %>" method="POST">
                <button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#modalAdd">DELETE</button>
              </form>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</div>
</div>
<%- include('./modalAdd.ejs'); %>



