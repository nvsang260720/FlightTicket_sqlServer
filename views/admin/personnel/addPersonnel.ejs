<div>
    <div class="container-fluid">
        <h2>Thêm nhân viên</h2>
    </div>
    <section>
        <div class="row">
            <div class="col-md-12">
                <div class="card card-outline card-info">
                    <form action="../admin/add-product" method="POST">
                        <div class="card-body">
                            <div class="form-group">
                                <div class="inputChoose">
                                    <label for="exampleInputName">Mã Nhân Viên</label>
                                    <input type="text" name="name" class="form-control" id="exampleInputPassword1"
                                        placeholder="Nhập tên sản phẩm">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputChoose">
                                    <label for="exampleInputName">Mã Chi Nhánh</label>
                                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                        <option selected>Chọn Mã Chi Nhánh</option>
                                        <option value="1">DN02</option>
                                        <option value="2">SG03</option>
                                        <option value="3">HN01</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputChoose">
                                    <label>Họ Tên</label>
                                    <input type="number" name="price" class="form-control" id="exampleInputPassword1"
                                        placeholder="price">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputChoose">
                                    <label>Số Điện Thoại</label>
                                    <input type="number" name="price" class="form-control" id="exampleInputPassword1" placeholder="price">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="inputChoose">
                                    <label>Lương</label>
                                    <input type="number" name="price" class="form-control" id="exampleInputPassword1" placeholder="price">
                                </div>
                            </div>
                     
                            <div class="form-group">
                                <button class="btSave">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>