<div class="container-fluid">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">
                Quản lí khách hàng
            </h3>
            <div class='float-right'>
                <button id="btnAdd" type="button" class="btn btn-info btn-sm" data-toggle="modal"
                    data-target="#modalAdd">
                    Thêm Thông Tin khách hàng
                </button>
            </div>
        </div>

        <div class="card-body">
            <table id="example" class="table table-striped table-bordered">
                <thead class="theadTable">
                    <tr>
                        <th style="width: 3%;">MaKhachHang</th>
                        <th style="width: 3%;">Ten</th>
                        <th style="width: 18%;">DiaChi</th>
                        <th style="width: 10%;">SoDienThoai</th>
                        <th style="width: 10%;">CMND</th>
                        <th style="width: 3%;">EDIT</th>
                        <th style="width: 3%;">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    <% customer.forEach( cus=> { %>
                        <tr>
                            <td class="centerTD">
                                <%= cus.MaKhachHang %>
                            </td>
                            <td>
                                <%= cus.Ten %>
                            </td>
                            <td class="centerTD">
                                <%= cus.DiaChi %>
                            </td>
                            <td>
                                <%= cus.SoDienThoai %>
                            </td>
                            <td>
                                <%= cus.CMND %>
                            </td>
                            <td class="bt">
                                <form action="/admin/edit-customer/<%= cus.MaKhachHang %>" method="GET">
                                    <button type="submit" class="btn btn-primary">EDIT</button>
                                </form>
                            </td>
                            <td>
                                <form action="/admin/customer/<%= cus.MaKhachHang %>" method="POST">
                                    <button type="submit" class="btn btn-danger" data-toggle="modal"
                                        data-target="#modalAdd">DELETE</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>